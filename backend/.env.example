# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MYSQL_URL=sqlite:///./wanderlite.db
# For MySQL: MYSQL_URL=mysql+pymysql://username:password@localhost/wanderlite

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_SECRET=your-jwt-secret-key-for-token-signing-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3100,http://127.0.0.1:3100

# API Keys
OPENWEATHER_API_KEY=your-openweather-api-key
CURRENCY_API_KEY=your-currency-api-key
GEMINI_API_KEY=your-gemini-api-key

# Server Configuration
PORT=8000
HOST=0.0.0.0
